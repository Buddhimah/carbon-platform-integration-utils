                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon.automation</groupId>
                <artifactId>org.wso2.carbon.automation.test.utils</artifactId>
                <version>${test.framwork.version}</version>
            </dependency>
            <dependency>
                <groupId>org.htmlparser</groupId>
