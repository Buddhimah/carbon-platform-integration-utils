            <dependency>
                <groupId>com.googlecode.json-simple</groupId>
                <artifactId>json-simple</artifactId>
                <version>${json.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.webapp.mgt.stub</artifactId>
                <version>${webapp.stub.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.rampart</groupId>
                <artifactId>rampart-core</artifactId>
                <version>${rampart.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon.automation</groupId>
                <artifactId>org.wso2.carbon.automation.extensions</artifactId>
                <version>${test.framwork.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <!-- Carbon Kernel Version-->
        <carbon.kernel.version>4.3.0</carbon.kernel.version>
        <!-- Carbon platform version comes here-->
        <carbon.platform.version>4.3.0</carbon.platform.version>
        <carbon.stub.version>4.3.0-SNAPSHOT</carbon.stub.version>
        <test.framwork.version>4.3.1</test.framwork.version>
        <zip4j.version>1.2.3</zip4j.version>
        <commons-lang3>3.0</commons-lang3>
        <htmlparser.version>2.1</htmlparser.version>
        <commons-net.version>3.2</commons-net.version>
        <htmlparser.version>2.1</htmlparser.version>
        <json.version>1.1</json.version>
        <webapp.stub.version>4.3.0-SNAPSHOT</webapp.stub.version>
        <rampart.version>1.6.1-wso2v13-SNAPSHOT</rampart.version>
        <project.scm.id>scm-server</project.scm.id>
    </properties>

</project>
