<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">


    <parent>
        <groupId>org.wso2</groupId>
        <artifactId>wso2</artifactId>
        <version>1</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon.integration</groupId>
    <artifactId>carbon-platform-integration-utils</artifactId>
    <version>4.3.0-SNAPSHOT</version>
    <name>WSO2 Carbon Platform Integration Utils - Aggregator POM</name>
    <url>http://wso2.org</url>
    <packaging>pom</packaging>



    <modules>
        <module>common-admin-clients</module>
        <module>common-framework-utils</module>
        <module>common-framework-extensions</module>
        <module>common-framework-tests</module>
    </modules>

    <scm>
        <connection>scm:git:https://github.com/wso2/carbon-platform-integration-utils.git</connection>
        <developerConnection>scm:git:https://github.com/wso2/carbon-platform-integration-utils.git</developerConnection>
        <url>https://github.com/wso2/carbon-platform-integration-utils.git</url>
        <tag>test-automation-utils-4.3.0</tag>
    </scm>
    <build>
    <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <configuration>
                        <preparationGoals>clean install</preparationGoals>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencyManagement>
